{% doc %}
  @prompt
    design a modern unique footer for me where colos can be customizable a logo image can you shownand also top and bottom padding of the footer can be customizable
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-top-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid {{ block.settings.divider_color }};
  }

  .ai-footer-logo-section-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-footer-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-footer-logo-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-footer-description-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    opacity: 0.9;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 700;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-footer-links-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: 14px;
    opacity: 0.85;
    transition: opacity 0.3s ease;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.social_icon_background }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    transform: translateY(-3px);
    background-color: {{ block.settings.social_icon_hover_background }};
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 30px;
    flex-wrap: wrap;
    gap: 20px;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    font-size: 14px;
    opacity: 0.8;
  }

  .ai-footer-payment-icons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} {
    height: 24px;
    width: auto;
    opacity: 0.7;
  }

  @media screen and (max-width: 768px) {
    .ai-footer-top-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-footer-logo-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

