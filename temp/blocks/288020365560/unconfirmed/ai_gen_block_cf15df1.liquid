{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-features-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_mobile }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-features-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-product-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.gap_mobile }}px;
    align-items: center;
  }

  .ai-product-features-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    order: 1;
  }

  .ai-product-features-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    display: block;
    {% if block.settings.shadow_opacity > 0 %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-product-features-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% if block.settings.shadow_opacity > 0 %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-features-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-features-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  .ai-product-features-left-{{ ai_gen_id }},
  .ai-product-features-right-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.features_gap_mobile }}px;
  }

  .ai-product-features-left-{{ ai_gen_id }} {
    order: 2;
  }

  .ai-product-features-right-{{ ai_gen_id }} {
    order: 3;
  }

  .ai-product-features-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.feature_background }};
    padding: {{ block.settings.feature_padding_mobile }}px;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    text-align: {{ block.settings.text_alignment }};
    {% if block.settings.shadow_opacity > 0 %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
    transition: border-color 0.3s ease;
    position: relative;
  }

  .ai-product-features-item-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.hover_border_color }};
  }

  .ai-product-features-item-content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-features-feature-image-{{ ai_gen_id }} {
    width: {{ block.settings.feature_image_size }}px;
    height: {{ block.settings.feature_image_size }}px;
    border-radius: {{ block.settings.feature_image_radius }}px;
    object-fit: cover;
    margin-bottom: {{ block.settings.icon_spacing }}px;
  }

  .ai-product-features-feature-image-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.feature_image_size }}px;
    height: {{ block.settings.feature_image_size }}px;
    background-color: #f0f0f0;
    border-radius: {{ block.settings.feature_image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ block.settings.icon_spacing }}px;
  }

  .ai-product-features-feature-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-features-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: {{ block.settings.icon_spacing }}px;
  }

  .ai-product-features-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .ai-product-features-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_size_mobile }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    line-height: 1.2;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-product-features-description-{{ ai_gen_id }} {
    font-family: {{ block.settings.description_font.family }}, {{ block.settings.description_font.fallback_families }};
    font-weight: {{ block.settings.description_font.weight }};
    font-size: {{ block.settings.description_size_mobile }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .ai-product-features-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_desktop }}px 40px;
    }

    .ai-product-features-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr {{ block.settings.image_width }}% 1fr;
      gap: {{ block.settings.gap_desktop }}px;
    }

    .ai-product-features-image-wrapper-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-product-features-left-{{ ai_gen_id }} {
      order: 1;
      gap: {{ block.settings.features_gap_desktop }}px;
    }

    .ai-product-features-right-{{ ai_gen_id }} {
      order: 3;
      gap: {{ block.settings.features_gap_desktop }}px;
    }

    .ai-product-features-item-{{ ai_gen_id }} {
      padding: {{ block.settings.feature_padding_desktop }}px;
    }

    .ai-product-features-feature-image-{{ ai_gen_id }} {
      position: absolute;
      top: 0;
      right: 0;
      margin-bottom: 0;
    }

    .ai-product-features-feature-image-placeholder-{{ ai_gen_id }} {
      position: absolute;
      top: 0;
      right: 0;
      margin-bottom: 0;
    }

    .ai-product-features-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
      padding-right: calc({{ block.settings.feature_image_size }}px + 10px);
    }

    .ai-product-features-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_desktop }}px;
    }
  }
{% endstyle %}

