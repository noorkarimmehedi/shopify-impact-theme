{% doc %}
  @prompt
    generate a section where i can upload a product image and there should be four features. in desktop version the image should be in the center and features are two in left and two on right. should be mobile optimised too. from font to color to radius to padding should be customizable, should be neo brutalism ui with tapping effect and all should be customizable from shadow and all 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-features-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_mobile }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-features-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-product-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.gap_mobile }}px;
    align-items: center;
  }

  .ai-product-features-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    order: 1;
  }

  .ai-product-features-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    display: block;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px 0px {{ block.settings.image_shadow_color }};
  }

  .ai-product-features-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px 0px {{ block.settings.image_shadow_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-features-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-features-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  .ai-product-features-left-{{ ai_gen_id }},
  .ai-product-features-right-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.features_gap_mobile }}px;
  }

  .ai-product-features-left-{{ ai_gen_id }} {
    order: 2;
  }

  .ai-product-features-right-{{ ai_gen_id }} {
    order: 3;
  }

  .ai-product-features-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.feature_background }};
    padding: {{ block.settings.feature_padding_mobile }}px;
    border-radius: {{ block.settings.feature_border_radius }}px;
    border: {{ block.settings.feature_border_width }}px solid {{ block.settings.feature_border_color }};
    text-align: {{ block.settings.text_alignment }};
    box-shadow: {{ block.settings.feature_shadow_x }}px {{ block.settings.feature_shadow_y }}px 0px {{ block.settings.feature_shadow_color }};
    cursor: pointer;
    user-select: none;
    transition: transform 0.1s ease, box-shadow 0.1s ease;
    position: relative;
  }

  .ai-product-features-item-{{ ai_gen_id }}:active {
    transform: translate({{ block.settings.tap_offset_x }}px, {{ block.settings.tap_offset_y }}px);
    box-shadow: {{ block.settings.feature_shadow_x | minus: block.settings.tap_offset_x }}px {{ block.settings.feature_shadow_y | minus: block.settings.tap_offset_y }}px 0px {{ block.settings.feature_shadow_color }};
  }

  .ai-product-features-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: {{ block.settings.icon_spacing }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% elsif block.settings.text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  .ai-product-features-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .ai-product-features-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_size_mobile }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    line-height: 1.2;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-product-features-description-{{ ai_gen_id }} {
    font-family: {{ block.settings.description_font.family }}, {{ block.settings.description_font.fallback_families }};
    font-weight: {{ block.settings.description_font.weight }};
    font-size: {{ block.settings.description_size_mobile }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .ai-product-features-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_desktop }}px 40px;
    }

    .ai-product-features-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr {{ block.settings.image_width }}% 1fr;
      gap: {{ block.settings.gap_desktop }}px;
    }

    .ai-product-features-image-wrapper-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-product-features-left-{{ ai_gen_id }} {
      order: 1;
      gap: {{ block.settings.features_gap_desktop }}px;
    }

    .ai-product-features-right-{{ ai_gen_id }} {
      order: 3;
      gap: {{ block.settings.features_gap_desktop }}px;
    }

    .ai-product-features-item-{{ ai_gen_id }} {
      padding: {{ block.settings.feature_padding_desktop }}px;
    }

    .ai-product-features-item-{{ ai_gen_id }}:hover {
      transform: translate(-2px, -2px);
      box-shadow: {{ block.settings.feature_shadow_x | plus: 2 }}px {{ block.settings.feature_shadow_y | plus: 2 }}px 0px {{ block.settings.feature_shadow_color }};
    }

    .ai-product-features-item-{{ ai_gen_id }}:active {
      transform: translate({{ block.settings.tap_offset_x }}px, {{ block.settings.tap_offset_y }}px);
      box-shadow: {{ block.settings.feature_shadow_x | minus: block.settings.tap_offset_x }}px {{ block.settings.feature_shadow_y | minus: block.settings.tap_offset_y }}px 0px {{ block.settings.feature_shadow_color }};
    }

    .ai-product-features-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
    }

    .ai-product-features-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_desktop }}px;
    }
  }
{% endstyle %}

<product-features-{{ ai_gen_id }} class="ai-product-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-features-container-{{ ai_gen_id }}">
    <div class="ai-product-features-grid-{{ ai_gen_id }}">
      <div class="ai-product-features-left-{{ ai_gen_id }}">
        <div class="ai-product-features-item-{{ ai_gen_id }}">
          {% if block.settings.feature_1_icon != blank %}
            <div class="ai-product-features-icon-{{ ai_gen_id }}">
              {{ block.settings.feature_1_icon }}
            </div>
          {% endif %}
          {% if block.settings.feature_1_title != blank %}
            <h3 class="ai-product-features-title-{{ ai_gen_id }}">{{ block.settings.feature_1_title }}</h3>
          {% endif %}
          {% if block.settings.feature_1_description != blank %}
            <div class="ai-product-features-description-{{ ai_gen_id }}">{{ block.settings.feature_1_description }}</div>
          {% endif %}
        </div>

        <div class="ai-product-features-item-{{ ai_gen_id }}">
          {% if block.settings.feature_2_icon != blank %}
            <div class="ai-product-features-icon-{{ ai_gen_id }}">
              {{ block.settings.feature_2_icon }}
            </div>
          {% endif %}
          {% if block.settings.feature_2_title != blank %}
            <h3 class="ai-product-features-title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
          {% endif %}
          {% if block.settings.feature_2_description != blank %}
            <div class="ai-product-features-description-{{ ai_gen_id }}">{{ block.settings.feature_2_description }}</div>
          {% endif %}
        </div>
      </div>

      <div class="ai-product-features-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.product_image %}
          <img
            src="{{ block.settings.product_image | image_url: width: 1000 }}"
            alt="{{ block.settings.product_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.product_image.width }}"
            height="{{ block.settings.product_image.height }}"
            class="ai-product-features-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-product-features-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
            <div class="ai-product-features-empty-state-{{ ai_gen_id }}">
              Add a product image
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-product-features-right-{{ ai_gen_id }}">
        <div class="ai-product-features-item-{{ ai_gen_id }}">
          {% if block.settings.feature_3_icon != blank %}
            <div class="ai-product-features-icon-{{ ai_gen_id }}">
              {{ block.settings.feature_3_icon }}
            </div>
          {% endif %}
          {% if block.settings.feature_3_title != blank %}
            <h3 class="ai-product-features-title-{{ ai_gen_id }}">{{ block.settings.feature_3_title }}</h3>
          {% endif %}
          {% if block.settings.feature_3_description != blank %}
            <div class="ai-product-features-description-{{ ai_gen_id }}">{{ block.settings.feature_3_description }}</div>
          {% endif %}
        </div>

        <div class="ai-product-features-item-{{ ai_gen_id }}">
          {% if block.settings.feature_4_icon != blank %}
            <div class="ai-product-features-icon-{{ ai_gen_id }}">
              {{ block.settings.feature_4_icon }}
            </div>
          {% endif %}
          {% if block.settings.feature_4_title != blank %}
            <h3 class="ai-product-features-title-{{ ai_gen_id }}">{{ block.settings.feature_4_title }}</h3>
          {% endif %}
          {% if block.settings.feature_4_description != blank %}
            <div class="ai-product-features-description-{{ ai_gen_id }}">{{ block.settings.feature_4_description }}</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</product-features-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductFeatures{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('product-features-{{ ai_gen_id }}', ProductFeatures{{ ai_gen_id }});
  })();
</script>

