<neo-collection-{{ ai_gen_id }} class="ai-neo-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank or block.settings.subtitle != blank %}
    <div class="ai-neo-collection__header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-neo-collection__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-neo-collection__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% if block.settings.collection != blank %}
    <div class="ai-neo-collection__carousel-{{ ai_gen_id }}">
      <div class="ai-neo-collection__track-wrapper-{{ ai_gen_id }}">
        <div class="ai-neo-collection__track-{{ ai_gen_id }}" data-track>
          {% for product in block.settings.collection.products limit: block.settings.product_limit %}
            <div 
              class="ai-neo-collection__product-{{ ai_gen_id }} {% if forloop.index == 1 %}ai-neo-collection__product-{{ ai_gen_id }}--side{% elsif forloop.index == 2 %}ai-neo-collection__product-{{ ai_gen_id }}--center{% elsif forloop.index == 3 %}ai-neo-collection__product-{{ ai_gen_id }}--side{% else %}ai-neo-collection__product-{{ ai_gen_id }}--hidden{% endif %}"
              data-product-index="{{ forloop.index0 }}"
            >
              <a href="{{ product.url }}" class="ai-neo-collection__card-{{ ai_gen_id }}">
                <div class="ai-neo-collection__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-neo-collection__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="ai-neo-collection__image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-neo-collection__info-{{ ai_gen_id }}">
                  <h3 class="ai-neo-collection__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                  <div class="ai-neo-collection__price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </div>
                  <span class="ai-neo-collection__button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </span>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="ai-neo-collection__controls-{{ ai_gen_id }}">
        <button
          class="ai-neo-collection__arrow-{{ ai_gen_id }} ai-neo-collection__arrow-prev-{{ ai_gen_id }}"
          aria-label="Previous products"
          data-prev
        >
          <svg class="ai-neo-collection__arrow-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button
          class="ai-neo-collection__arrow-{{ ai_gen_id }} ai-neo-collection__arrow-next-{{ ai_gen_id }}"
          aria-label="Next products"
          data-next
        >
          <svg class="ai-neo-collection__arrow-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>
  {% else %}
    <div class="ai-neo-collection__empty-{{ ai_gen_id }}">
      <p>Select a collection to display products</p>
    </div>
  {% endif %}
</neo-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class NeoCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-track]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.currentIndex = 1;
      }

      connectedCallback() {
        if (!this.track) return;

        this.products = Array.from(this.track.children);
        this.totalProducts = this.products.length;

        if (this.totalProducts === 0) return;

        this.prevButton.addEventListener('click', () => this.navigate(-1));
        this.nextButton.addEventListener('click', () => this.navigate(1));

        this.updateButtons();
      }

      navigate(direction) {
        this.currentIndex += direction;
        this.currentIndex = Math.max(0, Math.min(this.currentIndex, this.totalProducts - 1));
        this.updateView();
      }

      updateView() {
        this.products.forEach((product, index) => {
          product.classList.remove('ai-neo-collection__product-{{ ai_gen_id }}--center');
          product.classList.remove('ai-neo-collection__product-{{ ai_gen_id }}--side');
          product.classList.remove('ai-neo-collection__product-{{ ai_gen_id }}--hidden');
          
          if (index === this.currentIndex) {
            product.classList.add('ai-neo-collection__product-{{ ai_gen_id }}--center');
          } else if (index === this.currentIndex - 1 || index === this.currentIndex + 1) {
            product.classList.add('ai-neo-collection__product-{{ ai_gen_id }}--side');
          } else {
            product.classList.add('ai-neo-collection__product-{{ ai_gen_id }}--hidden');
          }
        });

        this.updateButtons();
      }

      updateButtons() {
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= this.totalProducts - 1;
      }
    }

    customElements.define('neo-collection-{{ ai_gen_id }}', NeoCollection{{ ai_gen_id }});
  })();
</script>

