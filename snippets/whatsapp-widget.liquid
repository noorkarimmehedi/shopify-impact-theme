<script>
  // Configuration - Update these with your actual contact details
  const chatConfig = {
    phoneNumber: '+8801819502705', // Your WhatsApp number with country code
    defaultMessage: 'Hi! I\'m interested in your home and kitchen products.', // Default WhatsApp message
    messengerUrl: 'https://m.me/angonaloyofficial?ref=Home%20Kitchen%20Inquiry', // Your Messenger URL
  };

  // Elements
  const widget = document.getElementById('whatsapp-widget');
  const toggleBtn = document.getElementById('whatsapp-toggle');
  const chatContainer = document.getElementById('whatsapp-chat');
  const startBtn = document.getElementById('whatsapp-start');
  const messengerBtn = document.getElementById('messenger-btn');

  // Toggle chat container
  toggleBtn.addEventListener('click', function() {
    const isActive = chatContainer.classList.contains('active');
    
    if (isActive) {
      chatContainer.classList.remove('active');
      toggleBtn.classList.remove('active');
    } else {
      chatContainer.classList.add('active');
      toggleBtn.classList.add('active');
    }
  });

  // Start WhatsApp chat
  startBtn.addEventListener('click', function() {
    const phone = chatConfig.phoneNumber.replace(/[^0-9]/g, '');
    const message = encodeURIComponent(chatConfig.defaultMessage);
    const url = `https://wa.me/${phone}?text=${message}`;
    
    window.open(url, '_blank', 'noopener,noreferrer');
  });

  // Start Messenger chat
  messengerBtn.addEventListener('click', function(e) {
    e.preventDefault();
    window.open(chatConfig.messengerUrl, '_blank', 'noopener,noreferrer');
  });

  // Close on outside click
  document.addEventListener('click', function(event) {
    if (!widget.contains(event.target) && chatContainer.classList.contains('active')) {
      chatContainer.classList.remove('active');
      toggleBtn.classList.remove('active');
    }
  });

  // Prevent chat from closing when clicking inside
  chatContainer.addEventListener('click', function(event) {
    event.stopPropagation();
  });

  // Adjust position on window resize for mobile
  function adjustPosition() {
    if (window.innerWidth <= 768) {
      widget.style.bottom = '60px';
    } else {
      widget.style.bottom = '15px';
    }
  }

  // Initialize
  adjustPosition();
  window.addEventListener('resize', adjustPosition);
</script>

