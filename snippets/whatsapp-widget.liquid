    </div>

    <!-- Close Button -->
    <button class="whatsapp-close-button" id="whatsapp-close" aria-label="Close WhatsApp Chat" style="display: none;">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

<script>
  // Configuration
  const whatsappConfig = {
    phoneNumber: '+8801819502705', // Change to your WhatsApp number with country code
    message: 'Hello there! Is someone available to chat?', // Pre-filled message (optional)
    messengerUrl: 'https://m.me/angonaloyofficial', // Change to your Facebook Messenger URL
  };

  // Elements
  const widget = document.getElementById('whatsapp-widget');
  const toggleBtn = document.getElementById('whatsapp-toggle');
  const chatContainer = document.getElementById('whatsapp-chat');
  const closeBtn = document.getElementById('whatsapp-close');
  const startBtn = document.getElementById('whatsapp-start');
  const messengerBtn = document.getElementById('messenger-btn');

  // Toggle chat container
  toggleBtn.addEventListener('click', function() {
    const isActive = chatContainer.classList.contains('active');
    
    if (isActive) {
      // Close chat
      chatContainer.classList.remove('active');
      toggleBtn.classList.remove('active');
    } else {
      // Open chat
      chatContainer.classList.add('active');
      toggleBtn.classList.add('active');
    }
  });

  // Close chat
  closeBtn.addEventListener('click', function() {
    chatContainer.classList.remove('active');
    closeBtn.classList.remove('active');
    toggleBtn.style.opacity = '1';
    toggleBtn.style.pointerEvents = 'all';
  });

  // Start WhatsApp chat
  startBtn.addEventListener('click', function() {
    const phone = whatsappConfig.phoneNumber.replace(/[^0-9]/g, '');
    const message = encodeURIComponent(whatsappConfig.message);
    const url = `https://wa.me/${phone}?text=${message}`;
    
    window.open(url, '_blank', 'noopener,noreferrer');
  });

  // Start Messenger chat
  messengerBtn.addEventListener('click', function(e) {
    e.preventDefault();
    window.open(whatsappConfig.messengerUrl, '_blank', 'noopener,noreferrer');
  });

  // Close on outside click
  document.addEventListener('click', function(event) {
    if (!widget.contains(event.target) && chatContainer.classList.contains('active')) {
      chatContainer.classList.remove('active');
      toggleBtn.classList.remove('active');
    }
  });

  // Adjust position on window resize for mobile
  function adjustPosition() {
    if (window.innerWidth <= 768) {
      widget.style.bottom = '70px'; // Offset for mobile bottom nav
    } else {
      widget.style.bottom = '15px';
    }
  }

  // Initialize position
  adjustPosition();
  
  // Listen for resize
  window.addEventListener('resize', adjustPosition);
</script>

</body>
</html>