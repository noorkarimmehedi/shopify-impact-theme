{% comment %}
  Live Order Counter Snippet
  Usage: {% render 'live-order-counter' %}
{% endcomment %}

<div class="live-order-counter-wrapper">
  <div class="live-order-counter">
    <span class="live-order-counter__icon">ðŸšš</span>
    <span class="live-order-counter__text">
      Order within
      <strong class="live-order-counter__timer">
        <span class="live-order-counter__minutes">10</span>min
        <span class="live-order-counter__seconds">00</span>s
      </strong>
      to ship today
    </span>
  </div>
</div>

<style>
  .live-order-counter-wrapper {
    padding: 0 15px;
    box-sizing: border-box;
    width: 100%;
  }

  .live-order-counter {
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 0;
    padding: 14px 16px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-size: 15px;
    color: #374151;
    white-space: nowrap;
    width: 100%;
    box-sizing: border-box;
  }

  .live-order-counter__icon {
    font-size: 20px;
    line-height: 1;
    flex-shrink: 0;
  }

  .live-order-counter__text {
    font-size: 15px;
    color: #374151;
  }

  .live-order-counter__timer {
    color: #2563eb;
    font-weight: 700;
  }

  @media screen and (min-width: 750px) {
    .live-order-counter-wrapper {
      padding: 0;
    }
  }
</style>

<script>
  (function () {
    var minutesEl = document.querySelector('.live-order-counter__minutes');
    var secondsEl = document.querySelector('.live-order-counter__seconds');

    if (!minutesEl || !secondsEl) return;

    var totalSeconds = 10 * 60; // 10 minutes from page load

    function update() {
      if (totalSeconds <= 0) {
        // Reset back to 10:00 when it hits 0
        totalSeconds = 10 * 60;
      }

      var m = Math.floor(totalSeconds / 60);
      var s = totalSeconds % 60;

      minutesEl.textContent = m < 10 ? '0' + m : m;
      secondsEl.textContent = s < 10 ? '0' + s : s;

      totalSeconds--;
    }

    update();
    setInterval(update, 1000);
  })();
</script>
