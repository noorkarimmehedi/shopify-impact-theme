{% comment %}
  Live Order Counter Snippet
  Usage: {% render 'live-order-counter' %}
{% endcomment %}

<div class="live-order-counter">
  <span class="live-order-counter__icon">ðŸšš</span>
  <span class="live-order-counter__text">
    Order within
    <strong class="live-order-counter__timer">
      <span class="live-order-counter__minutes">10</span>min
      <span class="live-order-counter__seconds">00</span>s
    </strong>
    to ship today
  </span>
</div>

<style>
  .live-order-counter {
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 0;
    padding: 14px 16px;
    margin: 8px 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-size: 15px;
    color: #374151;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
  }

  .live-order-counter__icon {
    font-size: 20px;
    line-height: 1;
    flex-shrink: 0;
  }

  .live-order-counter__text {
    font-size: 15px;
    color: #374151;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 0;
  }

  .live-order-counter__timer {
    color: #2563eb;
    font-weight: 700;
  }
</style>

<script>
  (function () {
    var minutesEl = document.querySelector('.live-order-counter__minutes');
    var secondsEl = document.querySelector('.live-order-counter__seconds');

    if (!minutesEl || !secondsEl) return;

    var totalSeconds = 10 * 60;

    function update() {
      if (totalSeconds <= 0) {
        totalSeconds = 10 * 60;
      }

      var m = Math.floor(totalSeconds / 60);
      var s = totalSeconds % 60;

      minutesEl.textContent = m < 10 ? '0' + m : m;
      secondsEl.textContent = s < 10 ? '0' + s : s;

      totalSeconds--;
    }

    update();
    setInterval(update, 1000);
  })();
</script>
