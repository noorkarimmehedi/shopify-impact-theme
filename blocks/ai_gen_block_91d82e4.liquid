{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-accordion-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
  }

  .ai-accordion-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 0;
    border-bottom: 2px solid {{ block.settings.border_color }};
    margin-bottom: 24px;
  }

  .ai-accordion-tab-{{ ai_gen_id }} {
    flex: 1;
    padding: 16px 20px;
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    cursor: pointer;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.tab_text_color }};
    transition: all 0.3s ease;
    position: relative;
    text-align: center;
  }

  .ai-accordion-tab-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_hover_color }};
    background-color: {{ block.settings.tab_hover_bg }};
  }

  .ai-accordion-tab-{{ ai_gen_id }}.active {
    color: {{ block.settings.tab_active_color }};
    border-bottom-color: {{ block.settings.tab_active_border }};
  }

  .ai-accordion-content-{{ ai_gen_id }} {
    display: none;
    padding: {{ block.settings.content_padding }}px;
    background-color: {{ block.settings.content_bg }};
    border-radius: {{ block.settings.border_radius }}px;
    color: {{ block.settings.content_text_color }};
    line-height: 1.6;
  }

  .ai-accordion-content-{{ ai_gen_id }}.active {
    display: block;
    animation: ai-accordion-fade-{{ ai_gen_id }} 0.3s ease-in;
  }

  @keyframes ai-accordion-fade-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ai-accordion-content-{{ ai_gen_id }} h3 {
    margin-top: 0;
    margin-bottom: 12px;
    font-size: {{ block.settings.content_heading_size }}px;
    color: {{ block.settings.content_heading_color }};
  }

  .ai-accordion-content-{{ ai_gen_id }} p {
    margin: 0 0 12px;
  }

  .ai-accordion-content-{{ ai_gen_id }} ul,
  .ai-accordion-content-{{ ai_gen_id }} ol {
    margin: 0 0 12px;
    padding-left: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-accordion-tabs-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 0;
      border-bottom: none;
    }

    .ai-accordion-tab-{{ ai_gen_id }} {
      border-bottom: 1px solid {{ block.settings.border_color }};
      text-align: left;
    }

    .ai-accordion-tab-{{ ai_gen_id }}.active {
      border-left: 3px solid {{ block.settings.tab_active_border }};
      border-bottom-color: {{ block.settings.border_color }};
    }

    .ai-accordion-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<accordion-tabs-{{ ai_gen_id }} class="ai-accordion-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-accordion-tabs-{{ ai_gen_id }}">
    {% if block.settings.tab_1_title != blank %}
      <button
        class="ai-accordion-tab-{{ ai_gen_id }} active"
        data-tab="1"
        aria-expanded="true"
        aria-controls="ai-accordion-content-1-{{ ai_gen_id }}"
      >
        {{ block.settings.tab_1_title }}
      </button>
    {% endif %}

    {% if block.settings.tab_2_title != blank %}
      <button
        class="ai-accordion-tab-{{ ai_gen_id }}"
        data-tab="2"
        aria-expanded="false"
        aria-controls="ai-accordion-content-2-{{ ai_gen_id }}"
      >
        {{ block.settings.tab_2_title }}
      </button>
    {% endif %}

    {% if block.settings.tab_3_title != blank %}
      <button
        class="ai-accordion-tab-{{ ai_gen_id }}"
        data-tab="3"
        aria-expanded="false"
        aria-controls="ai-accordion-content-3-{{ ai_gen_id }}"
      >
        {{ block.settings.tab_3_title }}
      </button>
    {% endif %}
  </div>

  {% if block.settings.tab_1_title != blank %}
    <div
      id="ai-accordion-content-1-{{ ai_gen_id }}"
      class="ai-accordion-content-{{ ai_gen_id }} active"
      role="region"
      aria-labelledby="tab-1"
    >
      {{ block.settings.tab_1_content }}
    </div>
  {% endif %}

  {% if block.settings.tab_2_title != blank %}
    <div
      id="ai-accordion-content-2-{{ ai_gen_id }}"
      class="ai-accordion-content-{{ ai_gen_id }}"
      role="region"
      aria-labelledby="tab-2"
    >
      {{ block.settings.tab_2_content }}
    </div>
  {% endif %}

  {% if block.settings.tab_3_title != blank %}
    <div
      id="ai-accordion-content-3-{{ ai_gen_id }}"
      class="ai-accordion-content-{{ ai_gen_id }}"
      role="region"
      aria-labelledby="tab-3"
    >
      {{ block.settings.tab_3_content }}
    </div>
  {% endif %}
</accordion-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class AccordionTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-accordion-tab-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-accordion-content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabNumber = tab.getAttribute('data-tab');
            this.switchTab(tabNumber);
          });
        });
      }

      switchTab(tabNumber) {
        this.tabs.forEach((tab) => {
          tab.classList.remove('active');
          tab.setAttribute('aria-expanded', 'false');
        });

        this.contents.forEach((content) => {
          content.classList.remove('active');
        });

        const activeTab = this.querySelector(`[data-tab="${tabNumber}"]`);
        const activeContent = this.querySelector(`#ai-accordion-content-${tabNumber}-{{ ai_gen_id }}`);

        if (activeTab && activeContent) {
          activeTab.classList.add('active');
          activeTab.setAttribute('aria-expanded', 'true');
          activeContent.classList.add('active');
        }
      }
    }

    customElements.define('accordion-tabs-{{ ai_gen_id }}', AccordionTabs{{ ai_gen_id }});
  })();
</script>

