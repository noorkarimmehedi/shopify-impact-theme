{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tab-accordion-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
  }

  .ai-tab-accordion__header-wrapper-{{ ai_gen_id }} {
    background-color: {{ block.settings.header_background }};
    padding: {{ block.settings.header_padding }}px;
    border-radius: {{ block.settings.header_border_radius }}px {{ block.settings.header_border_radius }}px 0 0;
    border: {{ block.settings.header_border_width }}px solid {{ block.settings.header_border_color }};
    border-bottom: none;
  }

  .ai-tab-accordion__header-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.tab_spacing }}px;
    flex-wrap: nowrap;
    justify-content: space-between;
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }} {
    position: relative;
    border: none;
    background: transparent;
    padding: 0;
    cursor: pointer;
    outline-offset: 4px;
    transition: filter 250ms;
    user-select: none;
    touch-action: manipulation;
    flex: 1;
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }}:hover {
    filter: brightness(110%);
  }

  .ai-tab-accordion__tab-shadow-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.tab_border_radius }}px;
    background: {{ block.settings.tab_shadow_color }};
    will-change: transform;
    transform: translateY(2px);
    transition: transform 600ms cubic-bezier(.3, .7, .4, 1);
  }

  .ai-tab-accordion__tab-edge-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.tab_border_radius }}px;
    background: {{ block.settings.tab_edge_color }};
  }

  .ai-tab-accordion__tab-front-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    padding: {{ block.settings.tab_padding_vertical }}px {{ block.settings.tab_padding_horizontal }}px;
    border-radius: {{ block.settings.tab_border_radius }}px;
    font-size: {{ block.settings.tab_font_size }}px;
    color: {{ block.settings.tab_text_color }};
    background: {{ block.settings.tab_background }};
    will-change: transform;
    transform: translateY(-4px);
    transition: transform 600ms cubic-bezier(.3, .7, .4, 1);
    font-weight: {{ block.settings.tab_font_weight }};
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }}:hover .ai-tab-accordion__tab-front-{{ ai_gen_id }} {
    transform: translateY(-6px);
    transition: transform 250ms cubic-bezier(.3, .7, .4, 1.5);
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }}:active .ai-tab-accordion__tab-front-{{ ai_gen_id }} {
    transform: translateY(-2px);
    transition: transform 34ms;
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }}:hover .ai-tab-accordion__tab-shadow-{{ ai_gen_id }} {
    transform: translateY(4px);
    transition: transform 250ms cubic-bezier(.3, .7, .4, 1.5);
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }}:active .ai-tab-accordion__tab-shadow-{{ ai_gen_id }} {
    transform: translateY(1px);
    transition: transform 34ms;
  }

  .ai-tab-accordion__tab-button-{{ ai_gen_id }}.active .ai-tab-accordion__tab-front-{{ ai_gen_id }} {
    background: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_text_color }};
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} {
    display: none;
    padding: {{ block.settings.content_padding }}px;
    background-color: {{ block.settings.content_background }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: 0 0 {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px;
    color: {{ block.settings.content_text_color }};
    line-height: {{ block.settings.line_height }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: border-color 0.3s ease;
    text-align: center;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.hover_border_color }};
  }

  .ai-tab-accordion__content-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} h1,
  .ai-tab-accordion__content-{{ ai_gen_id }} h2,
  .ai-tab-accordion__content-{{ ai_gen_id }} h3,
  .ai-tab-accordion__content-{{ ai_gen_id }} h4,
  .ai-tab-accordion__content-{{ ai_gen_id }} h5,
  .ai-tab-accordion__content-{{ ai_gen_id }} h6 {
    margin: {{ block.settings.heading_spacing }}px 0 {{ block.settings.paragraph_spacing }}px 0;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} h1:first-child,
  .ai-tab-accordion__content-{{ ai_gen_id }} h2:first-child,
  .ai-tab-accordion__content-{{ ai_gen_id }} h3:first-child,
  .ai-tab-accordion__content-{{ ai_gen_id }} h4:first-child,
  .ai-tab-accordion__content-{{ ai_gen_id }} h5:first-child,
  .ai-tab-accordion__content-{{ ai_gen_id }} h6:first-child {
    margin-top: 0;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} ul,
  .ai-tab-accordion__content-{{ ai_gen_id }} ol {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
    padding-left: 20px;
  }

  .ai-tab-accordion__content-{{ ai_gen_id }} li {
    margin-bottom: {{ block.settings.list_item_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-tab-accordion__tab-front-{{ ai_gen_id }} {
      font-size: {{ block.settings.tab_font_size | times: 0.85 }}px;
      padding: {{ block.settings.tab_padding_vertical | times: 0.8 }}px {{ block.settings.tab_padding_horizontal | times: 0.7 }}px;
    }

    .ai-tab-accordion__header-{{ ai_gen_id }} {
      gap: {{ block.settings.tab_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<tab-accordion-{{ ai_gen_id }} class="ai-tab-accordion-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tab-accordion__header-wrapper-{{ ai_gen_id }}">
    <div class="ai-tab-accordion__header-{{ ai_gen_id }}">
      <button
        class="ai-tab-accordion__tab-button-{{ ai_gen_id }} active"
        data-tab="tab1"
        aria-expanded="true"
        aria-controls="content-tab1-{{ ai_gen_id }}"
      >
        <span class="ai-tab-accordion__tab-shadow-{{ ai_gen_id }}"></span>
        <span class="ai-tab-accordion__tab-edge-{{ ai_gen_id }}"></span>
        <span class="ai-tab-accordion__tab-front-{{ ai_gen_id }}">
          {{ block.settings.tab_1_title }}
        </span>
      </button>

      <button
        class="ai-tab-accordion__tab-button-{{ ai_gen_id }}"
        data-tab="tab2"
        aria-expanded="false"
        aria-controls="content-tab2-{{ ai_gen_id }}"
      >
        <span class="ai-tab-accordion__tab-shadow-{{ ai_gen_id }}"></span>
        <span class="ai-tab-accordion__tab-edge-{{ ai_gen_id }}"></span>
        <span class="ai-tab-accordion__tab-front-{{ ai_gen_id }}">
          {{ block.settings.tab_2_title }}
        </span>
      </button>

      <button
        class="ai-tab-accordion__tab-button-{{ ai_gen_id }}"
        data-tab="tab3"
        aria-expanded="false"
        aria-controls="content-tab3-{{ ai_gen_id }}"
      >
        <span class="ai-tab-accordion__tab-shadow-{{ ai_gen_id }}"></span>
        <span class="ai-tab-accordion__tab-edge-{{ ai_gen_id }}"></span>
        <span class="ai-tab-accordion__tab-front-{{ ai_gen_id }}">
          {{ block.settings.tab_3_title }}
        </span>
      </button>
    </div>
  </div>

  <div
    id="content-tab1-{{ ai_gen_id }}"
    class="ai-tab-accordion__content-{{ ai_gen_id }} active"
    data-content="tab1"
    role="region"
    aria-labelledby="tab1"
  >
    {{ block.settings.tab_1_content }}
  </div>

  <div
    id="content-tab2-{{ ai_gen_id }}"
    class="ai-tab-accordion__content-{{ ai_gen_id }}"
    data-content="tab2"
    role="region"
    aria-labelledby="tab2"
  >
    {{ block.settings.tab_2_content }}
  </div>

  <div
    id="content-tab3-{{ ai_gen_id }}"
    class="ai-tab-accordion__content-{{ ai_gen_id }}"
    data-content="tab3"
    role="region"
    aria-labelledby="tab3"
  >
    {{ block.settings.tab_3_content }}
  </div>
</tab-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class TabAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabButtons = this.querySelectorAll('.ai-tab-accordion__tab-button-{{ ai_gen_id }}');
        this.tabContents = this.querySelectorAll('.ai-tab-accordion__content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabButtons.forEach((button) => {
          button.addEventListener('click', () => {
            const tabId = button.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabButtons.forEach((btn) => {
          btn.classList.remove('active');
          btn.setAttribute('aria-expanded', 'false');
        });

        this.tabContents.forEach((content) => {
          content.classList.remove('active');
        });

        const activeButton = this.querySelector(`[data-tab="${tabId}"]`);
        const activeContent = this.querySelector(`[data-content="${tabId}"]`);

        if (activeButton && activeContent) {
          activeButton.classList.add('active');
          activeButton.setAttribute('aria-expanded', 'true');
          activeContent.classList.add('active');
        }
      }
    }

    customElements.define('tab-accordion-{{ ai_gen_id }}', TabAccordion{{ ai_gen_id }});
  })();
</script>

