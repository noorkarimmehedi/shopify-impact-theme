{% doc %}
  @prompt
    generate me a hero section where the texts and bottom texts should be in the bottom and should be customizable. both should be in the bottom in the bottm and should be bottom left on desktop version 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.hero_height_mobile }}px;
    overflow: hidden;
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    min-height: {{ block.settings.hero_height_mobile }}px;
    padding: {{ block.settings.content_padding_mobile }}px;
    width: 100%;
  }

  .ai-hero-text-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size_mobile }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size_mobile }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.4;
  }

  .ai-hero-button-wrapper-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_background }};
    color: {{ block.settings.button_secondary_text_color }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_background }};
    color: {{ block.settings.button_secondary_hover_text_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height_desktop }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height_desktop }}px;
      padding: {{ block.settings.content_padding_desktop }}px;
      align-items: {{ block.settings.content_alignment_desktop }};
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.hero_image %}
      <img
        src="{{ block.settings.hero_image | image_url: width: 2000 }}"
        alt="{{ block.settings.hero_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.hero_image.width }}"
        height="{{ block.settings.hero_image.height }}"
        class="ai-hero-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-empty-state-{{ ai_gen_id }}">
          Next, add a hero image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    <div class="ai-hero-text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.button_text != blank or block.settings.button_secondary_text != blank %}
        <div class="ai-hero-button-wrapper-{{ ai_gen_id }}">
          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_link }}"
              class="ai-hero-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}

          {% if block.settings.button_secondary_text != blank %}
            <a
              href="{{ block.settings.button_secondary_link }}"
              class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
            >
              {{ block.settings.button_secondary_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

