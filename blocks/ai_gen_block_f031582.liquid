{% doc %}
  @prompt
    generate me a hero section where the texts and bottom texts should be in the bottom and should be customizable. both should be in the bottom in the bottm and should be bottom left on desktop version , should be option for two buttons , button should be in two row one below another one. also the heading and subheading alligment , the image size should adapt the actual image size also i need option for desktop image upload, should be option for image size for mobile version. also i need button a slight more on both left and right side on mobile version , in desktop buttons should be side by side 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.height_mobile }}px;
    overflow: hidden;
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit_mobile }};
  }

  .ai-hero-image-desktop-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-image-mobile-{{ ai_gen_id }} {
    display: block;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    min-height: {{ block.settings.height_mobile }}px;
    padding: {{ block.settings.padding_mobile }}px;
  }

  .ai-hero-text-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.content_max_width }}px;
    text-align: {{ block.settings.text_alignment_mobile }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size_mobile }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size_mobile }}px;
    margin: 0 0 {{ block.settings.button_spacing }}px 0;
    line-height: 1.5;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.button_gap }}px;
    align-items: stretch;
    width: 100%;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    width: 100%;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_color }};
    border-color: {{ block.settings.button_primary_bg }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    border-color: {{ block.settings.button_primary_hover_bg }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_color }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    border-color: {{ block.settings.button_secondary_hover_border }};
  }

  @media screen and (min-width: 750px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.height_desktop }}px;
    }

    .ai-hero-image-{{ ai_gen_id }} {
      object-fit: {{ block.settings.image_fit_desktop }};
    }

    .ai-hero-content-{{ ai_gen_id }} {
      min-height: {{ block.settings.height_desktop }}px;
      padding: {{ block.settings.padding_desktop }}px;
      align-items: flex-start;
    }

    .ai-hero-text-wrapper-{{ ai_gen_id }} {
      text-align: {{ block.settings.text_alignment_desktop }};
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: row;
      align-items: center;
      width: auto;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: auto;
      min-width: 200px;
    }

    .ai-hero-image-desktop-{{ ai_gen_id }} {
      display: block;
    }

    .ai-hero-image-mobile-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image_desktop or block.settings.image_mobile %}
      {% if block.settings.image_desktop %}
        <img
          src="{{ block.settings.image_desktop | image_url: width: 2000 }}"
          alt="{{ block.settings.image_desktop.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_desktop.width }}"
          height="{{ block.settings.image_desktop.height }}"
          class="ai-hero-image-{{ ai_gen_id }} ai-hero-image-desktop-{{ ai_gen_id }}"
        >
      {% endif %}
      {% if block.settings.image_mobile %}
        <img
          src="{{ block.settings.image_mobile | image_url: width: 1000 }}"
          alt="{{ block.settings.image_mobile.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_mobile.width }}"
          height="{{ block.settings.image_mobile.height }}"
          class="ai-hero-image-{{ ai_gen_id }} ai-hero-image-mobile-{{ ai_gen_id }}"
        >
      {% endif %}
    {% else %}
      <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    <div class="ai-hero-text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_primary_label != blank %}
          <a
            href="{{ block.settings.button_primary_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_primary_label }}
          </a>
        {% endif %}

        {% if block.settings.button_secondary_label != blank %}
          <a
            href="{{ block.settings.button_secondary_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_secondary_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

