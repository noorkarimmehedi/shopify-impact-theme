{%- comment -%}
  Renders a product card with centered Add to Cart button
  
  Accepts:
  - product: {Object} Product object
  - stacked: {Boolean} Whether to stack the card
  - background: {String} Background color
  - text_color: {String} Text color
  - show_badges: {Boolean} Show product badges
{%- endcomment -%}

<style>
  .custom-product-card {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .custom-product-card__image-wrapper {
    position: relative;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .custom-product-card__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .custom-product-card__info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex-grow: 1;
  }

  .custom-product-card__title {
    font-size: 1rem;
    font-weight: 500;
    margin: 0;
  }

  .custom-product-card__price {
    font-size: 0.95rem;
    font-weight: 600;
  }

  .custom-product-card__button-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
  }

  .custom-add-to-cart-btn {
    background-color: #D50000;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
    box-shadow: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: 100%;
    max-width: 200px;
  }

  .custom-add-to-cart-btn:hover {
    background-color: #B71C1C;
  }

  .custom-add-to-cart-btn:active {
    background-color: #8B0000;
  }

  .custom-add-to-cart-btn:disabled {
    background-color: #cccccc;
    cursor: not-allowed;
  }
</style>

<div class="custom-product-card">
  <a href="{{ product.url }}" class="custom-product-card__image-wrapper">
    {%- if product.featured_image -%}
      <img 
        src="{{ product.featured_image | image_url: width: 600 }}"
        alt="{{ product.featured_image.alt | escape }}"
        class="custom-product-card__image"
        loading="lazy"
      >
    {%- else -%}
      {{ 'product-1' | placeholder_svg_tag: 'custom-product-card__image' }}
    {%- endif -%}
  </a>

  <div class="custom-product-card__info">
    <h3 class="custom-product-card__title">
      <a href="{{ product.url }}">{{ product.title }}</a>
    </h3>

    <div class="custom-product-card__price">
      {%- if product.compare_at_price > product.price -%}
        <span class="price-compare">{{ product.compare_at_price | money }}</span>
        <span class="price-sale">{{ product.price | money }}</span>
      {%- else -%}
        <span class="price-regular">{{ product.price | money }}</span>
      {%- endif -%}
    </div>

    <div class="custom-product-card__button-wrapper">
      {%- if product.available -%}
        <button 
          type="button" 
          class="custom-add-to-cart-btn"
          onclick="addToCart({{ product.variants.first.id }})"
        >
          Add to Cart
        </button>
      {%- else -%}
        <button type="button" class="custom-add-to-cart-btn" disabled>
          Sold Out
        </button>
      {%- endif -%}
    </div>
  </div>
</div>

<script>
function addToCart(variantId) {
  fetch('/cart/add.js', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      id: variantId,
      quantity: 1
    })
  })
  .then(response => response.json())
  .then(data => {
    // Refresh cart or show notification
    window.location.href = '/cart';
  })
  .catch(error => {
    console.error('Error:', error);
  });
}
</script>